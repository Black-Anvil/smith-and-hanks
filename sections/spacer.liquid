<section data-component="spacer" data-component-type="section" {% if tag != blank %}data-component-tag="{{ tag }}" {% endif %}class="spacer spacer--{{ section.settings.spacing }}"></section>
{% schema %}
{
  "name": "Spacer",
  "settings": [
    {
      "type": "select",
      "id": "spacing",
      "label": "Spacing",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "medium"
    }
  ],
  "presets": [
    {
      "name": "Spacer"
    }
  ]
}
{% endschema %}